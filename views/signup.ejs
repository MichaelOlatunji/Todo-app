    <body>
        <h2>Sign Up</h2>
        <form>
            <label>First Name:</label><br />
            <input type="text" placeholder="Michael" required/><br /><br />
            <label>Last Name:</label><br />
            <input type="text" placeholder="Olatunji" required/><br /><br />
            <label>Email:</label><br />
            <input type="email" placeholder="abc@example.com" required/><br /><br />
            <label>Username:</label><br />
            <input type="text" placeholder="michaelo" required/><br /><br />
            <label>Password:</label><br />
            <input type="password" placeholder="Password" required/><br /><br />
            <label>Confirm Password:</label><br />
            <input type="password" placeholder="Confirm Password" required/><br /><br />
            <button id="signupBtn">Register</button>
        </form>
    </body>
